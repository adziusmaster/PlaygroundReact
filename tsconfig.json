{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "build",
    "moduleResolution": "node",
    "resolveJsonModule": true 
  },
  "include": ["**/*.ts", "**/*.tsx"],
}
